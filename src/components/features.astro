---
import ContentSection from "~/components/content-section.astro";
import { Icon } from "astro-icon";

const features = [
  {
    title: "Tu comunidad en Discord",
    description:
      "Antes que nada Selfcommit es una proyecto de desarolladores para desarolladores, unete a la comunidad, aprende y comparte.",
    icon: "mdi:discord",
  },
  {
    title: "Coaching personalizado",
    description:
      "El equipo de Selfcommit esta formado por diferentes perfiles seniors del mundo de IT, aprende con nosotros.",
    icon: "mdi:user",
  },
  {
    title: "Validamos tus aptitudes",
    description:
      "En nuestra plataforma web comprobamos que tengas todos los checks m√≠nimos que cualquier desarollador deberia tener.",
    icon: "mdi:search-web",
  }
];
---

<ContentSection title="Features" id="features">
  <Fragment slot="lead">
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6 border border-default bg-offset">
          <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
            <Icon name={icon} />
          </div>
          <p class="text-xl font-extrabold text-center">{title}</p>
          <p class="text-sm text-center text-offset">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
